<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="130.0" prefWidth="364.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="364.0" spacing="10.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Panneau :" />
                  <ComboBox fx:id="comboBoxP" prefWidth="150.0" promptText="Sélectionner..." />
                  <Button fx:id="buttonP" mnemonicParsing="false" style="-fx-background-color: blue; -fx-text-fill: white;" text="Ajouter panneau" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="364.0" spacing="10.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Client :" />
                  <ComboBox fx:id="comboBoxC" prefWidth="150.0" promptText="Sélectionner..." />
                  <Button fx:id="buttonC" mnemonicParsing="false" prefHeight="25.0" prefWidth="105.0" style="-fx-background-color: blue; -fx-text-fill: white;" text="Ajouter client" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="344.0" spacing="10.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Durée :" />
                  <TextField fx:id="textDuree" promptText="En jours" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="TOP_CENTER" prefHeight="32.0" prefWidth="364.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="valider" mnemonicParsing="false" style="-fx-background-color: green; -fx-text-fill: white;" text="Confirmer" />
            <Button fx:id="annuler" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" text="Annuler" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
